@model Paulo.Web.ViewModels.LocacaoViewModel

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.DataDaLocacao)
    @Html.HiddenFor(model => model.DataDeAtualizacao)
    @Html.HiddenFor(model => model.DataDeCadastro)

    <div class="form-group">
        <label class="control-label col-md-2">Generos</label>
        <div class="col-md-10">
            @Html.ListBoxFor(model => model.SelectedFilmesIds,
            ((MultiSelectList)ViewBag.SelectedFilmes),
            new { @class = "form-control", multiple = "multiple" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Salvar" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Voltar para a lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
