@model Paulo.Web.ViewModels.LocacaoViewModel

@{
    ViewBag.Title = "Deletar";
}

<h2>@ViewBag.Title</h2>

<h3>Tem certeza que deseja deletar este registro?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.DataDaLocacao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataDaLocacao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Usuario.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Usuario.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Usuario.CPF)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Usuario.CPF)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Filmes)
        </dt>

        @foreach (var filme in Model.Filmes)
        {
            <dd>
                @Html.DisplayFor(modeItem => filme.Nome)
            </dd>
        }

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar para a lista", "Index")
        </div>
    }
</div>
